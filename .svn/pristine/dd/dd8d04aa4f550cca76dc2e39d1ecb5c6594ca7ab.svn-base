    fp = spo_fopen(domain_file_path, "r");
    if (fp == NULL) {
        perror("fopen domain config file err\n");
        return NULL;
    }

    rbt_header = (spo_rbt_header_t *) spo_calloc(sizeof(spo_rbt_header_t));
